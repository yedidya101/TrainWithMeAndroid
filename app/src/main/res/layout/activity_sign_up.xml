<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".SignUp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="Pick Your Gender"
                android:paddingTop="200sp"
                android:layout_marginEnd="10sp"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlHardcoded" />



            <!-- RadioGroup and EditText in a horizontal LinearLayout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="15sp"
                android:paddingEnd="20sp"
                android:paddingBottom="20sp">

                <!-- EditText for First Name -->
                <EditText
                    android:id="@+id/FirstName"
                    android:layout_width="200sp"
                    android:layout_height="55sp"
                    android:layout_weight="1"
                    android:background="@android:drawable/editbox_background_normal"
                    android:hint="@string/first_name"
                    android:paddingStart="20sp"
                    android:textSize="30sp" />

                <!-- RadioGroup for gender selection -->
                <RadioGroup
                    android:id="@+id/radioGroupGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:layout_marginStart="15sp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButtonMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Male"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radioButtonFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Female" />
                </RadioGroup>
            </LinearLayout>

            <!-- Last Name EditText -->
            <EditText
                android:id="@+id/lastName"
                android:layout_width="200sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Last Name"
                android:paddingStart="20sp"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/EmailRegister"
                android:layout_width="390sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Email"
                android:paddingStart="20sp"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/setPassword"
                android:inputType="textPassword"
                android:layout_width="390sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="Password"
                android:paddingStart="20sp"
                android:textSize="30sp" />


            <EditText
                android:id="@+id/ConfirmPassword"
                android:inputType="textPassword"
                android:layout_width="390sp"
                android:layout_height="55sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="3sp"
                android:layout_marginEnd="20sp"
                android:layout_marginBottom="20sp"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="@string/confirm_password"
                android:paddingStart="20sp"
                android:textSize="30sp" />


            <!-- Login Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="68sp"
                android:orientation="horizontal"
                android:paddingStart="15sp"
                android:paddingEnd="20sp"
                android:paddingBottom="20sp">

                <Button
                    android:id="@+id/bthBirthDate"
                    android:layout_width="200sp"
                    android:layout_height="55dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="20sp"
                    android:background="@android:drawable/editbox_dropdown_dark_frame"
                    android:onClick="showDatePickerDialog"
                    android:text="@string/birthdate"
                    android:textColor="#F8F0F0"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:id="@+id/chosenDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/_01_20_2000"
                    android:layout_marginEnd="80sp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/termsAndConditions"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/by_joining_you_agree_to_the_terms_and_conditions_and_confirm_that_you_have_read_and_understand_the_privacy_policy"
                android:paddingTop="40sp"
                android:layout_marginEnd="10sp"
                android:textColor="@color/white"
                android:textSize="14sp" />



            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="350sp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="6sp"
                android:layout_marginBottom="20sp"
                android:background="@android:drawable/editbox_dropdown_dark_frame"
                android:backgroundTint="#0C1538"
                android:text="@string/join"
                android:textSize="20sp"
                android:textColor="#F8F0F0"

                />



            <!-- Sign Up TextView -->


        </LinearLayout>
    </ScrollView>
</LinearLayout>
